<Window x:Class="dnd5e_resource_browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dnd5e_resource_browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="873">
    <Grid>
        <TabControl Margin="0,10,0,0">
            <TabItem x:Name="HomeTab" Header="Home">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="WaitLabel" Content="Null" HorizontalAlignment="Left" Margin="140,47,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="GoButton" Content="FetchDatabase" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Click="GoButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="SpellTab" Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
